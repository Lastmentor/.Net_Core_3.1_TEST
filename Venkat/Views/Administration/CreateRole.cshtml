@model Venkat.ViewModels.CreateRoleViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="administration" asp-action="createrole" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" placeholder="Enter role">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>    
    <div class="form-group row">
        <div class="col-sm-10">
            <button style="width:auto;" type="submit" class="btn btn-outline-success">Create Role</button>
        </div>
    </div>
</form>