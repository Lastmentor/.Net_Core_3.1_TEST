@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService

@{
    ViewData["Title"] = "All Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Any())
{
    <a asp-controller="administration" asp-action="createrole" class="btn btn-primary mt-3" style="width:auto;">
        Add New Role
    </a>
    foreach (var role in Model)
    {
        <div class="card mt-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @role.Name
                </h5>
            </div>
            <div class="card-footer">
                <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">
                    @if ((await authorizationService.AuthorizeAsync(User, "EditRolesPolicy")).Succeeded)
                    {
                        <a asp-controller="administration" asp-action="editrole" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                    }

                    <span id="confirmDeleteSpan_@role.Id" style="display:none;">
                        <span>Are you sure want to delete</span>
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a href="#" class="btn btn-primary" onclick="confirmDelete('@role.Id', false);return false;">No</a>
                    </span>

                    <span id="deleteSpan_@role.Id">
                        <a href="#" class="btn btn-danger" onclick="confirmDelete('@role.Id', true);return false;">Delete</a>
                    </span>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card mt-3">
        <div class="card-header">
            No Roles Created Yet
        </div>
        <div class="card-body">
            <a asp-controller="administration" asp-action="createrole" class="btn btn-primary" style="width:auto;">
                Create Role
            </a>
        </div>
    </div>
}

@section scripts{
    <script src="~/js/custom.js"></script>
}